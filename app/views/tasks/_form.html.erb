<%= form_with(model: task, url: tasks_url, local: true) do |form| %>

  <div class="mt-3">
    <%= form.label :title, style: "display: block", class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mt-3">
    <%= form.label :description, style: "display: block", class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="mt-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status,
      options_for_select(Task.statuses.map { |key, value| [key.titleize, Task.statuses.key(value)] }),
      { selected: task.status },
      class: 'form-control'
    %>
  </div>

  <div class="mt-3">
    <%= form.label :priority, class: "form-label" %>
    <%= form.select :priority,
      options_for_select(Task.priorities.map { |key, value| [key.titleize, Task.priorities.key(value)] }),
      { selected: task.priority },
      class: 'form-control'
    %>
  </div>

  <div class="mt-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>

<% end %>

