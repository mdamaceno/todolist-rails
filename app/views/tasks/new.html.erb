<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @task.errors.any? %>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
           <li class="text-danger"><%= message %></li>
          <%end%>
        </ul>
      <%end%>
      <%= render 'tasks/form', task: @task %>
    </div>
  </div>
</div>
